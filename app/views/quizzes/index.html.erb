<% content_for :title, "Quizzes" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Quizzes</h1>
    <%= link_to "New quiz", new_quiz_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="quizzes" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @quizzes.any? %>
      <% @quizzes.each do |quiz| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= quiz.title%>
          <%= quiz.description%>
            <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", quiz, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <% if quiz.owner_id == current_user.id %>
              <%= link_to "Edit", edit_quiz_path(quiz), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
              <%= button_to "Destroy", quiz, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            <% end %>
            </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No quizzes found.</p>
    <% end %>
  </div>
</div>
