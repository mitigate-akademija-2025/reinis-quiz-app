<%= turbo_frame_tag dom_id(quiz) do %>
  <div class="w-full sm:w-auto my-5">
    <div class="flex flex-col sm:flex-row justify-between items-start gap-4">
      <div class="flex flex-col">
        <h2 class="font-bold text-xl"><%= quiz.title %></h2>
        <p class="text-gray-600"><%= quiz.description %></p>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-2 sm:items-center">
        <%= link_to "Show", 
            quiz_path(quiz), 
            data: { turbo_frame: "_top" },
            class: "text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
        
        <% if quiz.owner_id == current_user&.id %>
          <%= link_to "Edit", 
              edit_quiz_path(quiz), 
              data: { turbo_frame: "_top" },
              class: "text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
          
          <%= button_to "Destroy", 
              quiz_path(quiz), 
              method: :delete, 
              class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", 
              form: { class: "inline-block" },
              data: { turbo_confirm: "Are you sure?", turbo_frame: "_top" } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>